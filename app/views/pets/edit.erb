<h1> Update Pet </h1>

<form action = "/pets/<%=@pet.id%>/update" method = "GET">
  <!-- <input id="hidden" type="hidden" name="_method" value="patch"> -->
  <label> pet_name: </label>

  <br></br>

  <input type = "text" name = "pet_name" id = "pet_name" value = "<%=@pet.name%>"> </input>

  <br></br>

  <label> Choose an exiting owner: <label>

  <% @owners.each do |owner| %>
    <input type ="radio" name = "pet[owner_id]" id = "<%= owner.id%>" value = "<%= owner.id%>" <%= "checked" if @pet.owner == owner %> > <%= owner.name %> </input>
  <%end %>

  <br></br>

  <label> Add a new owner: </label>

  <br></br>

  <label>name:</label>

    <input  type="text" name="owner[name]" id = "owner_name"></input>

  <br></br>

    <input type="submit" value="Update Pet">
</form>
